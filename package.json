{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "platform",
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "dev": "pnpm with-env turbo dev --parallel --concurrency 12",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "storybook": "turbo storybook",
    "postinstall": "pnpm db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,mjs,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "prepare": "husky install",
    "changeset:release": "pnpm build --filter=./packages/* --filter=!./packages/tsconfig --filter=!./packages/eslint-config && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "with-env": "dotenv -e .env -c development --"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.25.2",
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@manypkg/cli": "^0.20.0",
    "@bali/eslint-config": "workspace:@bali/eslint-config@*",
    "commitlint": "^17.5.0",
    "dotenv-cli": "^7.1.0",
    "prettier": "latest",
    "turbo": "1.8.8"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0"
  },
  "lint-staged": {
    "**/*.{json,md,mdx,yml}": [
      "pnpm format"
    ]
  },
  "packageManager": "pnpm@7.27.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "platform",
          "contracts",
          "api",
          "auth",
          "db",
          "eslint-config",
          "storybook",
          "tsconfig"
        ]
      ]
    }
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0,
    "showDetails": true
  }
}
